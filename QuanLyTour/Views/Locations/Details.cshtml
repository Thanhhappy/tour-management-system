@model QuanLyTour.Models.Location

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_User_layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LocationID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LocationDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.TourDetails)
        </dd>
        <dd>
            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th>Detail</th>
                </tr>
                @if (Model.TourDetails != null)
                {
                    foreach (var item in Model.TourDetails)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tour.TourName)
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" style="text-align:center;">Not found</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
